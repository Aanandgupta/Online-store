<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/forms.css">
<link rel="stylesheet" href="/css/product.css">
</head>

<body>
    <%- include('../includes/nav.ejs') %>


    <main>
        <form class="product-form" action="<%= edit===true? '/admin/edit-product/'+prodId :'/admin/add-product' %>"
            method="POST" enctype="multipart/form-data">
            <div class="form-control">
                <label for="title">Title</label>
                <input type="text" name="title" id="title" value="<%= edit===true ? title : '' %>" title : "" %> >

                <label for="price">Price</label>
                <input type="number" name="price" id="price" value=<%= edit===true ?  price : "" %>>

                <label for="imageUrl">Image</label>
                <input type="file" name="image" id="imageUrl" value=<%= edit===true ?  url : "" %>>

                <label for="description">Description</label>
                <textarea rows="5" id="description" type="text" name="description"
                    id="description"><%= edit===true ?description : "" %></textarea>


            </div>
            <% if(edit==true) {%>
                <input type="hidden" name="oldUrl" value="<%= url %>">
            <% } %>
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <button class="btn" type="submit"><%= edit===true ? "Update Product" : "Add Product" %></button>

        </form>
    </main>
    <%- include('../includes/end.ejs') %>